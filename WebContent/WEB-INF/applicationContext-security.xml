<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
       		 xmlns:beans="http://www.springframework.org/schema/beans"
       		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      		 xsi:schemaLocation="http://www.springframework.org/schema/beans
	   			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   			http://www.springframework.org/schema/security
	   			http://www.springframework.org/schema/security/spring-security.xsd">

	<http auto-config="true">
		<intercept-url pattern="/admin/**" access="ROLE_ADMINISTRADOR" />
		<intercept-url pattern="/restrito/**" access=" ROLE_SECRETARIA" />
	
		<form-login login-page="/publico/login.xhtml"
			always-use-default-target="true"
			default-target-url="/restrito/home.xhtml"
			authentication-failure-url="/publico/login.xhtml?login_error=1"/>
		<access-denied-handler error-page="/publico/acessoNegado.xhtml"/>			
		<logout/>
		<remember-me/>		
	</http>

	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="webDataSource"
				authorities-by-username-query="SELECT  
												u.login, u.permissao 
											  FROM 
											  	usuario u, usuario p 
											  WHERE 
											   	u.login = ?" 
				users-by-username-query="SELECT login, senha, ativo FROM usuario WHERE login = ?"/>
		</authentication-provider>
	</authentication-manager>
</beans:beans>
       		 
